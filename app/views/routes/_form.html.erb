<%= simple_form_for(@route) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code_name %>
    <%= f.association :destination, label_method: :city, value_method: :id, include_blank: false %>
    <%= f.association :route_type, label_method: :description, value_method: :id, include_blank: false %>
    <%= f.input :time %>
    <%= f.input :night %>
    <%= f.input :express %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
